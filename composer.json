{
  "name": "catpaw/svelte-starter",
  "type": "project",
  "description": "A Svelte SPA hosted by a CatPaw server",
  "homepage": "https://github.com/tncrazvan/catpaw-starter",
  "license": "MIT",
  "scripts": {
    "load": "@composer dump-autoload -o",
    "prod:dock": ["./bin/image", "docker run -p 80:5757 -td app"],
    "prod:start": "@php -dopcache.enable_cli=1 -dopcache.jit_buffer_size=100M ./bin/start --libraries='./src/php/lib' --entry='./src/php/main.php'",
    "prod:build": "bun run prod:build && php -dphar.readonly=0 ./catpaw.phar --build --build-optimize",
    "prod:test": "@php vendor/bin/phpunit tests",
    "prod:fix": "@php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix . && bun run prod:format",
    "dev:start": "@php -dxdebug.mode=debug -dxdebug.start_with_request=yes ./bin/start --libraries='./src/php/lib' --entry='./src/php/main.php'",
    "dev:watch": "@php ./bin/start --entry='./src/php/main.php' --libraries='./src/php/lib' --resources='./src/php/api,./env.yml' --info --watch --php='php -dxdebug.mode=debug -dxdebug.start_with_request=yes'",
    "dev:build": "bun run prod:build && php -dphar.readonly=0 ./catpaw.phar --build",
    "dev:test": "@php -dxdebug.mode=debug -dxdebug.start_with_request=yes vendor/bin/phpunit tests",
    "dev:fix": "@php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix . && bun run dev:format",
    "dev:client:load": "bun i",
    "dev:client:watch": "bun dev:watch",
    "dev:precommit": "pre-commit install && pre-commit autoupdate",
    "dev:tips": "[ ! -f catpaw.phar ] && echo '' || php catpaw.phar --tips",
    "download:catpaw": "[ ! -f catpaw.phar ] && wget https://github.com/tncrazvan/catpaw/releases/latest/download/catpaw.phar || echo ''",
    "download:psalm": "[ ! -f psalm.phar ] && wget https://github.com/vimeo/psalm/releases/latest/download/psalm.phar || echo ''",
    "post-autoload-dump": [
      "@download:psalm",
      "@download:catpaw",
      "@dev:client:load",
      "@dev:tips"
    ],
    "post-create-project-cmd": [
      "@download:psalm",
      "@download:catpaw",
      "@dev:client:load",
      "@dev:tips"
    ]
  },
  "authors": [
    {
      "name": "Razvan Tanase",
      "email": "tangent.jotey@gmail.com",
      "homepage": "https://github.com/tncrazvan",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/php/lib/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^8.2",
    "ext-mbstring": "*",
    "ext-pcntl": "*",
    "ext-openssl": "*",
    "ext-zlib": "*",
    "ext-yaml": "*",
    "catpaw/catpaw": "^2.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8",
    "phpunit/phpunit": "^9"
  },
  "config": {
    "preferred-install": "dist",
    "process-timeout": 0
  }
}
