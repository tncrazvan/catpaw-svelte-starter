{
  "name": "catpaw/svelte-starter",
  "type": "project",
  "description": "A php CatPaw web server starter template using Svelte",
  "homepage": "https://github.com/tncrazvan/catpaw-starter",
  "license": "MIT",
  "scripts": {
    "load": "@composer dump-autoload -o",
    "prod:dock": ["./bin/image", "docker run -p 80:5757 -td app"],
    "prod:start": "@php ./bin/start --libraries='./src/lib' --entry='./src/main.php'",
    "prod:build": "cd ./client && bun run build && cd .. && php -dphar.readonly=0 ./catpaw.phar --build --build-optimize",
    "prod:test": "@php vendor/bin/phpunit tests",
    "prod:fix": "@php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix .",
    "dev:start": "@php -dxdebug.mode=debug -dxdebug.start_with_request=yes ./bin/start --libraries='./src/lib' --entry='./src/main.php'",
    "dev:watch": "@php ./bin/start --entry='./src/main.php' --libraries='./src/lib' --resources='./server' --info --watch --php='php -dxdebug.mode=debug -dxdebug.start_with_request=yes'",
    "dev:build": "cd ./client && bun run build && cd .. && php -dphar.readonly=0 ./catpaw.phar --build",
    "dev:test": "@php -dxdebug.mode=debug -dxdebug.start_with_request=yes vendor/bin/phpunit tests",
    "dev:fix": "@php -dxdebug.mode=off ./vendor/bin/php-cs-fixer fix .",
    "dev:client:load": "cd ./client && bun i",
    "dev:client:watch": "cd ./client && bun dev",
    "dev:precommit": "pre-commit install && pre-commit autoupdate",
    "download:catpaw": "[ ! -f catpaw.phar ] && wget https://github.com/tncrazvan/catpaw/releases/latest/download/catpaw.phar || echo ''",
    "download:psalm": "[ ! -f psalm.phar ] && wget https://github.com/vimeo/psalm/releases/latest/download/psalm.phar || echo ''",
    "post-autoload-dump": [
      "@download:psalm",
      "@download:catpaw",
      "@dev:client:load"
    ],
    "post-create-project-cmd": [
      "@download:psalm",
      "@download:catpaw",
      "@dev:client:load",
      "Done. Remember to run `composer dev:precommit` if you want to sanitize your code before committing."
    ]
  },
  "authors": [
    {
      "name": "Razvan Tanase",
      "email": "tangent.jotey@gmail.com",
      "homepage": "https://github.com/tncrazvan",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/lib/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^8.2",
    "catpaw/core": "^1.0",
    "amphp/amp": "^3.0",
    "amphp/file": "^3.0",
    "catpaw/catpaw": "^2.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.8",
    "phpunit/phpunit": "^9"
  },
  "config": {
    "preferred-install": "dist",
    "process-timeout": 0
  }
}
